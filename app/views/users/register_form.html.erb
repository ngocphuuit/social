
	<!--main-->
	<main class="main" role="main">
		<!--wrap-->
		<div class="wrap clearfix">
			<!--row-->
			<div class="row">
			<!--content-->
				<section class="content center full-width wow fadeInUp">
					<div class="modal container">
						<h3>Register</h3>
						<form action="/users/register" method="POST">
							<div class="f-row">
								<input type="text" name="user[name]" placeholder="Your name" />
							</div>
							<div class="f-row">
								<input type="email" name="user[email]" placeholder="Your email" />
							</div>
							<div class="f-row">
								<input type="password" name="user[password]" placeholder="Your password" />
							</div>
							<div class="f-row">
								<input type="password" name="user[confirm_password]" placeholder="Retype password" />
							</div>
							<div class="f-row bwrap">
								<input type="submit" value="register" />
							</div>
						</form>
						<p>Already have an account yet? <a href="/users/login">Log in.</a></p>
					</div>
				</section>
				<!--//content-->
			</div>
			<!--//row-->
		</div>
		<!--//wrap-->
	</main>
	<!--//main-->
